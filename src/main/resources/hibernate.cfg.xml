<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/greenlight</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <mapping class="com.globalgrupp.greenlight.model.Channel"></mapping>
        <mapping class="com.globalgrupp.greenlight.model.Comment"></mapping>
        <mapping class="com.globalgrupp.greenlight.model.Event"></mapping>
        <mapping class="com.globalgrupp.greenlight.model.Street"></mapping>
        <mapping class="com.globalgrupp.greenlight.model.StreetChannel"></mapping>
        <mapping class="com.globalgrupp.greenlight.model.User"></mapping>
        <mapping class="com.globalgrupp.greenlight.model.UserChannel"></mapping>
        <mapping class="com.globalgrupp.greenlight.model.UserStreetChannel"></mapping>
    </session-factory>
</hibernate-configuration>